<resources>

    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="colorAccent">@color/accent</item>
        <item name="textInputStyle">@style/TextInputLayout</item>
        <item name="autoCompleteTextViewStyle">@style/AutoCompleteTextView</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="markerTextAppearance">@style/MarkerTextAppearance</item>
        <item name="markerBackgroundColor">@color/marker_background</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="ToolBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">?android:attr/textColorHint</item>
        <item name="errorTextAppearance">@style/TextInputLayout.Error</item>
    </style>

    <style name="TextInputLayout.Error" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/accent_error</item>
    </style>

    <style name="AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>

    <style name="Button" parent="@style/Widget.MaterialComponents.Button" />

    <style name="MarkerTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
