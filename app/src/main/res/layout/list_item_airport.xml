<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightSmall"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/indent_x2"
    android:paddingEnd="@dimen/indent_x2">

    <TextView
        android:id="@+id/fullNameView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/indent_x1"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceListItem"
        tools:text="Khabarovsk, Russia" />

    <TextView
        android:id="@+id/iataView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/airport_marker_background"
        android:ellipsize="none"
        android:gravity="center"
        android:maxLength="3"
        android:minWidth="68dp"
        android:singleLine="true"
        android:textAppearance="?attr/markerTextAppearance"
        tools:text="LED" />
</LinearLayout>
